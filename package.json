{
  "name": "react-pdf-js-mono",
  "version": "5.5.1",
  "description": "Simple React component to wrap up PDF.js. The easiest way to render PDFs in your React app.",
  "author": "mikecousins",
  "license": "MIT",
  "repository": "mikecousins/react-pdf-js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write ."
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "3.2.5",
    "turbo": "1.13.3",
    "typescript": "5.4.5"
  },
  "packageManager": "yarn@4.2.2"
}
