{
  "name": "@mikecousins/react-pdf",
  "version": "6.1.1",
  "description": "Simple React component to wrap up PDF.js. The easiest way to render PDFs in your React app.",
  "author": "mikecousins",
  "license": "MIT",
  "repository": "mikecousins/react-pdf-js",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.tsx --dts --format esm,cjs",
    "lint": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.4.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "3.1.0",
    "jest-canvas-mock": "2.4.0",
    "pdfjs-dist": "2.16.105",
    "tslib": "2.4.0",
    "tsup": "6.6.3",
    "typescript": "4.8.3"
  },
  "peerDependencies": {
    "pdfjs-dist": "2.16.105",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "bundleDependencies": true
}
